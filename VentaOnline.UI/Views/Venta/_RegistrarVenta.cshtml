@using VentaOnline.UI.Models
@model VentaViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <label asp-for="IdPersona" class="control-label"></label>
    <div class="row">
        <div class="col-md-10">
            <select asp-for="IdPersona" class="form-control" asp-items="ViewBag.Personas"></select>
        </div>
        <div class="col-md-2">
            <button type="button" data-bs-toggle="modal" data-bs-target="#miModal" class="btn btn-outline-success">&#10133;</button>
        </div>
    </div>
    <span asp-validation-for="IdPersona" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Descripcion" class="control-label"></label>
    <input asp-for="Descripcion" class="form-control" />
    <span asp-validation-for="Descripcion" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Cantidad" class="control-label"></label>
    <input asp-for="Cantidad" class="form-control" />
    <span asp-validation-for="Cantidad" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Precio</label>
    <input id="precio" class="form-control" />
</div>

<div class="form-group">
    <label asp-for="Total" class="control-label"></label>
    <input asp-for="Total" class="form-control" />
    <span asp-validation-for="Total" class="text-danger"></span>
</div>

<div class="form-group py-3">
    <button type="button" id="crearVenta" class="btn btn-success">Crear</button>
</div>

<script>
    document.getElementById("precio").addEventListener("keyup", () => venta.actualizarPrecio());
    document.getElementById("Cantidad").addEventListener("keyup", () => venta.actualizarPrecio());
    document.getElementById("crearVenta").addEventListener("click", () => venta.crearVenta(urlCrearVentas, urlObtenerVentas, urlObtenerTotalVenta));
</script>